<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentPerfilAmigos">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backBandeja"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:id="@+id/nombreAmigoPerfil"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/englebert"
                android:text=" "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="80dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textoPerfilAmigo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:fontFamily="@font/poppin"
                android:text="La fecha de su cumpleaÃ±os:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fechaCumpleAmigo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:fontFamily="@font/poppin"
                android:text="fecha "
                android:textAlignment="center"
                android:textColor="@color/rojo_Basico"
                android:textSize="17dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/eliminarAmigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar Amigo"
                android:fontFamily="@font/poppin"
                android:textStyle="bold"
                android:padding="15dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/boton_redondo_rojo"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reciclerViewSingleAmigosRegalos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>